<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/button_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleNoti"
            android:textStyle="bold"
            android:textColor="@color/colorDot"
            android:textSize="24sp"
            android:text="Giảm giá - 50%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvContentNoti"
            android:layout_below="@+id/tvTitleNoti"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:text=" Giảm giá 50% với toàn bộ mặt hàng thuộc danh mục thực phẩm hỗ trợ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvExpirationDateNoti"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvContentNoti"
            android:text="Ngày hết hạn: 12-11-2020"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>