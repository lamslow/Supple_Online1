<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.SearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorBackgroundLighterBlack"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="0.6"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />

        <AutoCompleteTextView
            android:id="@+id/actvNameProduct"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="7"
            android:background="@drawable/button_search"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:hint="@string/acti_search_product_title_text"
            android:paddingStart="20dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorTextInSearch"
            android:textSize="15dp"
            android:textStyle="normal" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>