<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".screen.ProfileActivity">

    <LinearLayout
        android:background="@color/colorBlack"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundLighterBlack">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAvatarProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:elevation="12dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvAvatarProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Đức Vượng"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameProfile"
            android:layout_centerHorizontal="true"
            android:text="( Học Viên )"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCapacity"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llPhoneProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại  :"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0767002143"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddressProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ              :"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Số 36/189 Nguyễn Ngọc Vũ, Cầu Giấy, Hà Nội"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.95"
            android:src="@drawable/ic_baseline_receipt_24" />

        <TextView
            android:layout_marginEnd="15dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textlines"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:textSize="20sp"
            android:textColor="@color/colorGray"
            android:text="Đơn hàng của bạn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_edit_24" />

        <TextView
            android:layout_marginEnd="15dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textlines"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:textSize="20sp"
            android:textColor="@color/colorGray"
            android:text="Đổi mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_help_24" />

        <TextView
            android:layout_marginEnd="15dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textlines"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:textSize="20sp"
            android:textColor="@color/colorGray"
            android:text="Câu hỏi thường gặp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:src="@drawable/ic_baseline_verified_user_24" />

        <TextView
            android:layout_marginEnd="23dp"
            android:paddingBottom="20dp"
            android:background="@drawable/textlines"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:textSize="20sp"
            android:textColor="@color/colorGray"
            android:text="Bảo mật và điều khoản"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.65"
            android:src="@drawable/ic_baseline_exit_to_app_24" />

        <TextView
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:layout_weight="3.1"
            android:textSize="20sp"
            android:textColor="@color/colorGray"
            android:text="Đăng xuất"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>